<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_contained_view"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Match 05"
            android:layout_marginTop="6dp"
            android:background="@color/colorPrimary"
            android:id="@+id/text_match_number"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M.A. Chidambaram Stadium, Chennai"
            android:textColor="@color/white"
            android:id="@+id/text_winning_description"
            android:visibility="gone"
            android:textStyle="bold"
            android:padding="6dp"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2.2"
            android:paddingLeft="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                >
                <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="100dp"
                android:id="@+id/image_teamA_logo"
                android:src="@drawable/team2"
                android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                  android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="KINGS"
                        android:id="@+id/text_teamA_name" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:id="@+id/text_teamA_score"
                        android:textStyle="bold"
                        android:text="15/0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:id="@+id/text_teamA_overs"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="3/20"
                       />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"

                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Thalapathi"
                        android:id="@+id/text_teamB_name"
                        android:gravity="right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:id="@+id/text_teamB_score"
                        android:textStyle="bold"
                        android:text="203/0"
                        android:gravity="right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/text_teamB_overs"
                        android:text="20"
                        android:visibility="gone"
                        android:gravity="right"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="100dp"
                    android:src="@drawable/team2"
                    android:id="@+id/image_teamB_logo"
                    android:padding="2dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/image_view_details"
                android:tint="@color/white"
                android:src="@drawable/arrow"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man of the match :"
            android:padding="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man of the match"
            android:padding="6dp"
            android:id="@+id/text_manofthematch"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/yellowLight"
        android:layout_marginTop="2dp"
     />


    </LinearLayout>



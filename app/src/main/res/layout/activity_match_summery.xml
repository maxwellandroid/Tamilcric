<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="@drawable/backgroundimage"
    tools:context=".MatchSummeryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25sp"
                android:layout_height="25dp"
                android:src="@drawable/left_arrow"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:tint="@color/white"
                android:onClick="backPressed"
                android:padding="3dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/tcalogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Summary"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:padding="8dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:id="@+id/rela_animation">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark_transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_home"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6sp"
            android:text="Match 52"
            android:textColor="@color/white"
            android:id="@+id/text_match_number"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M.A. Chidambaram Stadium, Chennai"
            android:textColor="@color/white"
            android:id="@+id/text_stadium"
            android:padding="6dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:padding="4dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="100dp"
                    android:id="@+id/image_teamA_logo"
                    android:src="@drawable/team2"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="KINGS"
                        android:id="@+id/text_teamA_name" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:id="@+id/text_teamA_score"
                        android:textStyle="bold"
                        android:text="15/0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:id="@+id/text_teamA_overs"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="3/20"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="Thalapathi"
                        android:id="@+id/text_teamB_name"
                        android:gravity="right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:id="@+id/text_teamB_score"
                        android:textStyle="bold"
                        android:text="203/0"
                        android:gravity="right"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:id="@+id/text_teamB_overs"
                        android:text="20"
                        android:gravity="right"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="100dp"
                    android:src="@drawable/team2"
                    android:id="@+id/image_teamB_logo"
                    android:padding="2dp"
                    android:layout_gravity="center"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_cornered_edittext_color"
                android:padding="6dp"
                android:text="Chennai"
                android:id="@+id/text_team1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_cornered_edittext"
                android:padding="6dp"
                android:text="Royal"
                android:layout_marginLeft="4dp"
                android:id="@+id/text_team2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:background="@color/red">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="Batting"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="R"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="B"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:text="SR"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="4s"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="6s"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Updated"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/text_batting_no_data"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="8dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:id="@+id/recyclerBatting">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:background="@color/red">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bowling"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="B"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="R"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="W"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="NB"
                android:textSize="10sp"

                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="6dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Updated"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/text_bowling_no_data"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:id="@+id/recyclerBowling">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>
</LinearLayout>

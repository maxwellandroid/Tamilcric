<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_contained_view"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2.3"
        android:padding="6dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="1"
            android:id="@+id/text_slno"
            android:textSize="12sp"
            android:textColor="@color/black"

            android:padding="6dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:id="@+id/image_team_logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="TeamA"
            android:id="@+id/text_team_name"
            android:textSize="12sp"
            android:textColor="@color/black"

            android:padding="6dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="5"
            android:textSize="12sp"
            android:id="@+id/text_played"
            android:textColor="@color/black"

            android:padding="6dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="3"
            android:textSize="12sp"
            android:id="@+id/text_won"
            android:textColor="@color/black"

            android:padding="6dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="2"
            android:textSize="12sp"
            android:id="@+id/text_lost"
            android:textColor="@color/black"

            android:padding="6dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="0"
            android:id="@+id/text_tied"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:padding="6dp"/>
    </LinearLayout>

</LinearLayout>
